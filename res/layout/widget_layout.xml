<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/widgetClock"
    android:layout_width="match_parent" android:layout_height="match_parent" android:paddingBottom="0dip" xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/txtHour"
        style="@style/TextBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" android:layout_margin="0dip" android:text="@string/sample_hour" android:typeface="normal"/>
    
    <TextView 
        android:id="@+id/txtDate"
        style="@style/TextSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtHour"
        android:layout_alignParentLeft="true" android:layout_margin="0dip" android:text="@string/sample_date"/>

    <LinearLayout 
        android:id="@+id/blockAlarm"
        android:layout_below="@id/txtHour"
        android:layout_toRightOf="@id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <ImageView 
            android:layout_width="wrap_content"
	        android:layout_height="wrap_content" android:layout_gravity="center" android:src="@android:drawable/ic_lock_idle_alarm"/>
        
	    <TextView 
	        android:id="@+id/txtAlarm"
	        style="@style/TextSmall"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/sample_alarm"/>
   	</LinearLayout>
</RelativeLayout>